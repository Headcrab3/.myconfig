set nocompatible

set encoding=utf-8
set fileencoding=utf-8
set fileencodings=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
set termencoding=utf-8

filetype indent on
filetype plugin on
filetype plugin indent on

set autoread

set noswapfile
set nowb
set nobackup

set mouse=a

set tabstop=4
set autoindent
set cindent


set number
syntax on
color evening
set showcmd
set ruler
set hlsearch

let mapleader=" "

inoremap jj <Esc>
inoremap <Up> <Nop>
inoremap <Down> <Nop>
inoremap <Left> <Nop>
inoremap <Right> <Nop>
